<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <header>
      <%= link_to root_path, class:"back-link" do %>
        <%= image_tag 'back-arrow.svg', alt: 'ðŸ¡ ', class: "back-img" %>
      <% end %>
      <h2>REGISTER</h2>
      <%= f.submit "Next", class: 'next-link' %>
    </header>
    <div class="form-container">
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name', class: 'input-field' %>
      </div>
      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'input-field' %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'input-field' %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'input-field' %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  </div>
<% end %>
